# =============================================================================
# Gastrotech Production Environment Variables
# Copy to .env.prod and fill in values before deployment
# =============================================================================

# --- Database ---
POSTGRES_DB=gastrotech
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD
DATABASE_URL=postgres://postgres:CHANGE_ME_TO_STRONG_PASSWORD@db:5432/gastrotech

# --- Redis ---
REDIS_URL=redis://redis:6379/0

# --- Django ---
DJANGO_SECRET_KEY=CHANGE_ME_TO_LONG_RANDOM_STRING_50_CHARS_MIN
DJANGO_SETTINGS_MODULE=config.settings.prod
DJANGO_DEBUG=False
RUN_MIGRATIONS=1
DJANGO_ALLOWED_HOSTS=gastrotech.com.tr,www.gastrotech.com.tr,api.gastrotech.com.tr,admin.gastrotech.com.tr,localhost,127.0.0.1,backend
CORS_ALLOWED_ORIGINS=https://gastrotech.com.tr,https://admin.gastrotech.com.tr,https://api.gastrotech.com.tr
CSRF_TRUSTED_ORIGINS=https://gastrotech.com.tr,https://admin.gastrotech.com.tr,https://api.gastrotech.com.tr

# --- SSL/Security (set to True AFTER certbot SSL is configured) ---
SECURE_SSL_REDIRECT=False
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# --- Django Email (for inquiry notifications) ---
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=1
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=info@gastrotech.com.tr

# --- Frontend ---
NEXT_PUBLIC_API_URL=https://api.gastrotech.com.tr
NEXT_PUBLIC_SITE_URL=https://gastrotech.com.tr
ADMIN_INTERNAL_URL=http://frontend-admin:3001
DJANGO_URL=http://backend:8000
NEXT_PUBLIC_BACKEND_URL=

# --- Optional ---
SENTRY_DSN=
