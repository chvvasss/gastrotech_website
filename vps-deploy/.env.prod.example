# =============================================================================
# Gastrotech Production Environment Variables
# Copy to .env.prod and fill in values before deployment
# =============================================================================

# --- Database ---
POSTGRES_DB=gastrotech
POSTGRES_USER=postgres
POSTGRES_PASSWORD=CHANGE_ME_TO_STRONG_PASSWORD
DATABASE_URL=postgres://postgres:CHANGE_ME_TO_STRONG_PASSWORD@db:5432/gastrotech

# --- Redis ---
REDIS_URL=redis://redis:6379/0

# --- Django ---
DJANGO_SECRET_KEY=CHANGE_ME_TO_LONG_RANDOM_STRING_50_CHARS_MIN
DJANGO_SETTINGS_MODULE=config.settings.prod
DJANGO_ALLOWED_HOSTS=api.gastrotech.com.tr
CORS_ALLOWED_ORIGINS=https://gastrotech.com.tr,https://admin.gastrotech.com.tr
CSRF_TRUSTED_ORIGINS=https://gastrotech.com.tr,https://admin.gastrotech.com.tr

# --- Django Email (for inquiry notifications) ---
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=1
EMAIL_HOST_USER=
EMAIL_HOST_PASSWORD=
DEFAULT_FROM_EMAIL=info@gastrotech.com.tr

# --- Frontend Build Args ---
NEXT_PUBLIC_API_URL=https://api.gastrotech.com.tr

# --- Optional ---
SENTRY_DSN=
RUN_MIGRATIONS=1
